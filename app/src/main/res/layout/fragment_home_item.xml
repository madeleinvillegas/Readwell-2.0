<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60px"
    android:id="@+id/home_item"
    android:clickable="true">

    <ImageView
        android:id="@+id/home_item_cover"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/home_item_cover"
        android:layout_toRightOf="@+id/home_item_cover"
        android:text="bookTitle"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/home_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_item_title"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/home_item_cover"
        android:layout_toRightOf="@+id/home_item_cover"
        android:text="bookAuthor" />

</RelativeLayout>