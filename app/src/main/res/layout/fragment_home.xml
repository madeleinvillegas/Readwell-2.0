    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--Ginawa namin dito, yung relative layout na to copy-pasted 10 times so 10 book makikita sa sreen,
everything's hardcoded kasi di namain alam how not to hard code it hahahahaha-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:id="@+id/home_book1"
                android:clickable="true">

                <TextView
                    android:id="@+id/home_genre1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Highly Rated in Insert Genre"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_genre1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/home_image1"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:contentDescription="Book Cover"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="240dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/home_image1">

                        <TextView
                            android:id="@+id/home_title1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Title"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/home_author1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_title1"
                            android:layout_marginTop="10dp"
                            android:text="Author"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/home_rating1"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:text="Rating"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
